{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "outDir": "build",
        "rootDir": "./src",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "target": "ES6"
    },
    "include": ["src/**/*"],
    "exclude": ["node_mobules"]
}